<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp">


    <EditText
        android:id="@+id/et_number_1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/et_number_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_number_2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/et_number_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/et_number_1"
        app:layout_constraintTop_toTopOf="@id/et_number_1" />

    <EditText
        android:id="@+id/et_number_3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@id/et_number_4"
        app:layout_constraintStart_toEndOf="@id/et_number_2"
        app:layout_constraintTop_toTopOf="@id/et_number_1" />


    <EditText
        android:id="@+id/et_number_4"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/et_number_3"
        android:inputType="phone"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_number_3"
        app:layout_constraintTop_toTopOf="@id/et_number_1" />

    <requestFocus/>
</androidx.constraintlayout.widget.ConstraintLayout>